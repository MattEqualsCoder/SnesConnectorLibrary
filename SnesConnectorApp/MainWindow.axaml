<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:snesConnectorApp="clr-namespace:SnesConnectorApp"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="800"
        Height="450"
        x:Class="SnesConnectorApp.MainWindow"
        x:DataType="snesConnectorApp:MainWindowViewModel"
        Title="SNES Connector Test App">
    <StackPanel Orientation="Vertical" Margin="5">
        <StackPanel Orientation="Horizontal">
            <Label Margin="0 2 2 2">Connector: </Label>
            <ComboBox ItemsSource="{Binding Connectors}" SelectedIndex="0" MinWidth="200" SelectionChanged="SelectingItemsControl_OnSelectionChanged"></ComboBox>
            <Label IsVisible="{Binding IsConnected}">Connected</Label>
            <Label IsVisible="{Binding IsConnectorConnecting}">Connecting</Label>
            <Label IsVisible="{Binding IsDisconnected}">Disconnected</Label>
        </StackPanel>    
    </StackPanel>
    
</Window>
